<%- model_class = PurchasePreference -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @purchase_preference.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:min_price) %>:</strong></dt>
  <dd><%= @purchase_preference.min_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max_price) %>:</strong></dt>
  <dd><%= @purchase_preference.max_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_frame) %>:</strong></dt>
  <dd><%= @purchase_preference.time_frame %></dd>
  <dt><strong><%= model_class.human_attribute_name(:daytime_phone) %>:</strong></dt>
  <dd><%= @purchase_preference.daytime_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @purchase_preference.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:buying) %>:</strong></dt>
  <dd><%= @purchase_preference.buying %></dd>
  <dt><strong><%= model_class.human_attribute_name(:buy_where) %>:</strong></dt>
  <dd><%= @purchase_preference.buy_where %></dd>
  <dt><strong><%= model_class.human_attribute_name(:buy_when) %>:</strong></dt>
  <dd><%= @purchase_preference.buy_when %></dd>
  <dt><strong><%= model_class.human_attribute_name(:selling) %>:</strong></dt>
  <dd><%= @purchase_preference.selling %></dd>
  <dt><strong><%= model_class.human_attribute_name(:selling_where) %>:</strong></dt>
  <dd><%= @purchase_preference.selling_where %></dd>
  <dt><strong><%= model_class.human_attribute_name(:selling_when) %>:</strong></dt>
  <dd><%= @purchase_preference.selling_when %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_low) %>:</strong></dt>
  <dd><%= @purchase_preference.purchase_low %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_high) %>:</strong></dt>
  <dd><%= @purchase_preference.purchase_high %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sell_low) %>:</strong></dt>
  <dd><%= @purchase_preference.sell_low %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sell_high) %>:</strong></dt>
  <dd><%= @purchase_preference.sell_high %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @purchase_preference.body %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_preferences_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_preference_path(@purchase_preference), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_preference_path(@purchase_preference),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
