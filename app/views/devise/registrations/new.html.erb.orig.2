<!-- /user/sign_up -->

<% @buying=session[:feewise_inproc_buying] %>
<% if @buying  %>
  <%= display_heading :heading_text => 'Account Information' %>
<%  else  %>
  <%= render :partial => "sign_up_or_in" %>
<% end %>



<!-- <div id="content" style=""> -->
  <div id="content-body">
    <%= render :partial => "static_pages/generic_sidebar" %>

    <% if @buying  %>
      <%= render :partial => "already_have_an_account" %><br /><br />
      <h2>Personal Information</h2><br />
    <% end %>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :full_name, :required => true, :autofocus => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
        <%= render :partial => "static_pages/terms_and_privacy" %>
        <%= f.input :terms_of_service, :required => true, :as => :boolean, :label => false %>

        <% if @buying  %>

<!-- 111111111111111111111111111111111111 -->

          <!-- < %= button_tag(type: 'submit', class: "btn btn-primary") do %> -->
          <!--   <i class="icon-ok icon-white"></i> Continue -->
          <!-- < % end %> -->


<!-- 222222222222222222222222222222222222 -->
<div class="form-actions">
  <button type="submit" class="btn btn-primary">Save changes</button>
  <button type="button" class="btn">Cancel</button>
</div>


        <% else %>
          <%= f.button :submit, "", :class=>"sign_up",  :id => "btn-signUp" %>
        <% end %>

        <%= (link_to "Already a member?", new_session_path(:user)) unless @buying %><br />
    <% end %>
    </div>

  </div>
