<!-- /user/sign_up -->

<% @buying=session[:feewise_inproc_buying] %>
<% if @buying  %>
  <%= display_heading :heading_text => 'Sign Up' %>
<%  else  %>
  <%= render :partial => "sign_up_or_in" %>
<% end %>



<!-- <div id="content" style=""> -->
  <div id="content-body">
    <%= render :partial => "static_pages/generic_sidebar" %>

    <% if @buying  %>
      <%= render :partial => "already_have_an_account" %>
      <!-- <h2>Personal Information WTF</h2><br /> -->
    <% end %>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :full_name, :required => true, :autofocus => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>

        <!-- Choice on same line or have error message work? -->
        <div class="control-group boolean required">
          <div class="controls"><input type="hidden" value="0" name="user[terms_of_service]">
            <label class="checkbox">
              <input type="checkbox" value="1" name="user[terms_of_service]" id="user_terms_of_service" class="boolean required">
              <%= render :partial => "static_pages/terms_and_privacy" %>
            </label>
          </div>
        </div>

        <br /><br />
        <!-- < % if @buying  %> -->

          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
            <i class="icon-ok icon-white"></i> Continue
          <% end %>

        <!-- < % else %> -->
        <!--   < %= f.button :submit, "", :class=>"sign_up",  :id => "btn-signUp" %> -->
        <!-- < % end %> -->

        <%= (link_to "Already a member?", new_session_path(:user)) unless @buying %><br />
    <% end %>
    </div>

  </div>
  <!-- <br class="clearBoth" /> -->
<!-- </div> -->
