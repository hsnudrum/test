
<!-- BEGIN PAGE-HEAD ####################-->
<div id="pageHead">
  <div id="title-area">
    <div id="title-content"><h1>Forgot Your Password?</h1></div>
  </div>
</div>
<!-- END PAGE-HEAD ####################-->

<!-- BEGIN CONTENT ####################-->
<div id="content" style="">
  <div id="content-body">
    <%= render :partial => "static_pages/generic_sidebar" %>
    <div class="one-col"><!-- --></div>
    <div class="five-col">

      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        <%= f.error_notification %>
        <div class="inputs">
          <%= f.input :email, :required => true, :autofocus => true, :input_html => { :class => 'input-text' } %><br />
        </div>
        <div oclass="actions">
          <%= f.button :submit, "Send me reset password instructions",  :id => "btn" %>
        </div>
      <% end %>

<!-- < %= render :partial => "devise/shared/links" %> -->

    </div>
  </div>
  <br class="clearBoth" />
</div>
<!-- END CONTENT ####################-->
